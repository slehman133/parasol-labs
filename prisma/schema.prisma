generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  role      user_type @default(user)
  cart      String    @default("[]")
  Orders    Order[]
}

model Order {
  id           Int      @id @default(autoincrement())
  userId       Int?
  itemName     String
  itemQuantity Int
  orderedAt    DateTime
  User         User?    @relation(fields: [userId], references: [id])
}

enum user_type {
  admin
  user
}
