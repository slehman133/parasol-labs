generator client {
  provider = "prisma-client-js"
}

datasource db {
  // for local dev
  provider = "postgresql"
  url      = env("DATABASE_URL")

  // for prod
  // provider  = "postgresql"
  // url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  role      user_type @default(user)
  Orders    Order[]
  cart      String    @default("[]")
}

model Order {
  id Int @id @default(autoincrement())

  User         User?    @relation(fields: [userId], references: [id])
  userId       Int?
  orderedAt    DateTime
  itemName     String
  itemQuantity Int
}

enum user_type {
  admin
  user
}
